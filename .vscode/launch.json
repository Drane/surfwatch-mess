{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File back-end",
      "type": "node",
      "request": "launch",
      "args": ["../${relativeFile}", "--colors"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}/back-end",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/back-end/.env",
    },
    {
      "name": "Current TS File API",
      "type": "node",
      "request": "launch",
      "args": ["../../${relativeFile}", "--colors"],
      "cwd": "${workspaceRoot}/api/surfwatch",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/back-end/.env",
    },
    {
      "name": "Mocha All",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/back-end/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/back-end/test/**/*Spec.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": { "NODE_ENV": "test " }
    },
    {
      "name": "Mocha Current File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/back-end/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": { "NODE_ENV": "test " }
    }
  ]
}
